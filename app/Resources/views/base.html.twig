<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Timetracker{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/app/css/jquery-ui.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/jquery-ui.structure.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/jquery-ui.theme.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/app/css/styles.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <header>
            <h1>Time tracker</h1>
        </header>

        <div id="timerContainer">
            {% block timetracker %}
                {{ include('timer/stub.html.twig') }}
            {% endblock %}
        </div>

        <div id="content">
            {% block content %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('bundles/app/js/jQuery-3.3.1.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/jquery-ui.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/timer.js') }}"></script>
            <script src="{{ asset('bundles/app/js/main.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </body>
</html>
