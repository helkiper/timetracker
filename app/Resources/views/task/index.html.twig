{% extends 'base.html.twig' %}

{% block content %}
    <h1>Tasks list</h1>

    <table>
        {% for key, task in tasks %}
            <tr {{ key is odd ? 'class="odd"' : ''}}>
                <td>
                    <a href="{{ path('task_show', { 'id': task.id }) }}" class="plain">{{ task.name | upper }}</a>
                    <br>
                    {{ task.description }}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p>
        <a href="{{ path('task_new') }}">Create a new task</a>
    </p>
{% endblock %}
